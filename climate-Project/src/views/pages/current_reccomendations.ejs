	<script>
		var temp = document.getElementById("temp").innerHTML;
		console.log(temp);
		var humidity = document.getElementById("humidity").innerHTML;
		console.log(humidity);

		if(temp <= 0)
		{
			tRec = "Its chilly outside! If you're planning on going out make sure to bring a jacket!";
		}
		if(temp > 0 && temp <= 20)
		{
			tRec = "Its a bit nippy out! You will probably want to wear something warm if you're going outside!";
		}
		if(temp > 20 && temp <= 28)
		{
			tRec = "Temperature is Perfect! Wear something normal"
		}
		if(temp > 28)
		{
			tRec = "Its hot out! If your're planning on going outside make sure to wear something light and drink lots of water!";
		}
		if(humidity < 20)
		{
			hRec = "Wow its dry! You may want extra moisturizer so you don't dry out!";
		}
		if(humidity > 20 && humidity < 30)
		{
			hRec = "Its pretty dry! You may want to carry chapstick with you today!";
		}
		if(humidity > 30 && humidity < 45)
		{
			hRec = "Humidity is Normal"
		}
		if(humidity > 45 && humidity < 60)
		{
			hRec = "Its a little humid today! Rain may be in the forecast!"
		}
		if(humidity > 60 && humidity < 90)
		{
			hRec = "The humidity is high! Expect rain and high humidity can contribute to feelings of low energy and result in you feeling lthargic!."
		}

